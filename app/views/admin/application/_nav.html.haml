#globalnav

  %ul#usermenu
    %li.avatar
      = link_to edit_admin_user_path(current_user) do
        = image_preloader(avatar_url(current_user, 32), size: '32x32')
        %span.name= current_user.name
        %span.badge.notifications-count.hide

    %li.logout
      = link_to admin_logout_path do
        %i.icon-logout

  %nav
    = render_navigation expand_all: true

    #global_notifications
      .title
        お知らせ
        %span.badge.notifications-count.hide

      %ul
